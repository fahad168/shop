<div id="variant<%= count %>">
  <div class="flex flex-row justify-between items-center">
    <input required name="variant<%= count %>[name]" class="font-bold mb-2 text-md text-black dark:text-white dark:bg-transparent mt-4 outline-none" style="border: none" value="Variant">
    <img src="<%= asset_path('cross_circle.svg') %>" class="w-5 h-5 cursor-pointer hover:opacity-75" onclick="delete_variant('<%= count %>')">
