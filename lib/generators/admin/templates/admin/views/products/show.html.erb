<style>
    .nice-select {
        margin-bottom: 20px !important;
    }
    .text-sm {
        line-height: 2.5rem !important;
    }
</style>

<div class="bg-white dark:bg-gray-800">
  <div class="flex flex-col gap-9 xl:gap-12 mt-10 item-center">
    <div id="variant_slider">
      <% if @variant.images.present? %>
        <%= render 'shop/admin/products/slider', variant: @variant %>
      <% else %>
        <div class="bg-gray-100 rounded-md">
          <%= image_tag "placeholder.png", class: "w-full object-contain h-[464px]" %>
        </div>
      <% end %>
    </div>
    <div class="">
      <div class="border-b border-dashed border-[#A3A3A3] mb-[26px] flex justify-between">
        <h1 class="text-2xl font-bold text-[#292929] dark:text-white mb-[18px] break-words w-full max-w-[35rem]"><%= @product.name %></h1>
        <p class="text-xl font-normal text-white mb-[26px] bg-[#FF8717] px-2 py-1 rounded-lg">$ <%= @product.price %></p>
      </div>
      <div class="flex justify-start gap-3">
        <% @product.categories.each do |cat| %>
          <p class="bg-[#FF8717] px-2 py-1 rounded-md text-white"><%= cat.capitalize %></p>
        <% end %>
      </div>
      <div class="mb-[37px] mt-8">
        <h1 class="text-base font-bold text-[#292929] dark:text-white mb-[9px] whitespace-normal">Description:</h1>
        <p class="text-sm font-normal text-[#666666] dark:text-gray-400 break-words w-full max-w-[35rem]"><%= @product.description %></p>
      </div>
      <div class="mt-5">
        <label class="text-base font-bold text-[#292929] dark:text-white mb-[9px] whitespace-normal">Variants</label>
        <select onchange="get_variant_info(this)" class="nice-select wide mt-4 border border-[#e8e8e8] rounded-[5px] !outline-none text-[#000000] text-sm placeholder-black block w-full">
          <% @product.variants.each_with_index do |variant, index| %>
            <option value="<%= variant.id %>" class="flex">
              <div class="rounded-full w-5 h-5 text-sm font-normal text-[#6B7280] whitespace-nowrap" style="background-color: <%= variant.color %>"></div>
              <p class="text-lg"><%= variant.name %></p>
            </option>
          <% end %>
        </select>
      </div>
      <div class="mb-[37px]" id="variant_info">
        <%= render "shop/admin/products/variant_details", variant: @variant %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag('/shop/admin/shop') %>